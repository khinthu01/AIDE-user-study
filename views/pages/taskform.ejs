<body>
  <div class="container">
    <div class="text-center mt-5">
      <h1><%= pageTitle %></h1>
    </div>
    <div class="row">
      <div class="col-lg-7 mx-auto">
        <div class="card mt-2 mx-auto p-4 bg-light">
          <div class="card-body bg-light">
            <div class="container">
              <form id="contact-form" role="form">
                <div class="controls">
                  <% for (const question in taskform) { %>
                  <div class="row">
                    <div class="col-md-6">
                      <div class="form-group">
                        <label for="form_message"><% taskform.question %></label>
                        <textarea
                          id="form_message"
                          name="message"
                          class="form-control"
                          rows="4"
                        ></textarea>
                      </div>
                    </div>
                  </div>
                  <% } %>
                  <div class="row">
                    <div class="col-md-12">
                      <input
                        type="submit"
                        class="btn btn-success btn-send pt-2 btn-block"
                        value="Send Message"
                      />
                    </div>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
        <!-- /.8 -->
      </div>
      <!-- /.row-->
    </div>
  </div>
</body>
